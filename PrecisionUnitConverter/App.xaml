<Application
    x:Class="PrecisionUnitConverter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark">

    <!-- This App designed to use Dark theme. Set here in above line via RequestedTheme="Dark". -->
    <Application.Resources>
        <!-- Set Global VisualState transition epx values for App. -->
        <!-- These epx values were determined by trial & error after considerable testing on various devices. -->
        <!-- Be very careful before changing them unless prepared to do considerable testing on various devices all over again. -->
        <x:Double x:Key="VisualStateMedium">720</x:Double>
        <x:Double x:Key="VisualStateNarrow">600</x:Double>
    </Application.Resources>
    
</Application>
